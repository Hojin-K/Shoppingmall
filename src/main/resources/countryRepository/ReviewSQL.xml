<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.myapp.repository.ReviewRepository">

	<insert id="insertReview">
	 		INSERT INTO SHOP_REVIEW_TB VALUES(CODE_REVIEW_SQ.NEXTVAL, #{itemCode}, #{memberId},
	 		#{reviewContent})
	</insert>
	<update id="updateReview">
			UPDATE SHOP_REVIEW_TB SET REVIEW_CONTENT=#{REVIEW_CONTENT} WHERE REVIEW_CODE=#{REVIEW_CODE}
	</update>

	<delete id="deleteReview">
        delete HR.SHOP_REVIEW_TB
        where HR.SHOP_REVIEW_TB.REVIEW_CODE = #{reviewCode}
    </delete>
	
	<select id="findAll" resultType="com.shop.myapp.dto.Review">
			SELECT * FROM SHOP_REVIEW_TB
    </select>

</mapper>