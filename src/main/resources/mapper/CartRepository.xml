<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.myapp.repository.CartRepository">
    <insert id="insertItem" parameterType="com.shop.myapp.dto.Cart">
        <selectKey resultType="java.lang.String" keyProperty="itemCode" order="BEFORE">
            SELECT CODE_CARD_SQ.nextval FROM DUAL
        </selectKey>
        insert into SHOP_CART_TB(CART_ID,item_code,
        member_id,
        OPTION_CODE,AMOUNT
        ) values (#{cartId},
                  #{itemCode},
                  #{MemberId},
                  #{itemOptionCode},
                  #{itemAmount})
    </insert>
</mapper>