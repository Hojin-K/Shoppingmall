<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.myapp.repository.CartRepository">

    <resultMap id="cartDetail" type="com.shop.myapp.dto.CartDetail">
        <id property="cartId" column="cart_id"/>
        <id property="memberId" column="member_id"/>
        <id property="itemAmount" column="amount"/>
        <association property="item" javaType="com.shop.myapp.dto.Item">
            <result property="itemCode" column="item_code"/>
            <result property="itemName" column="item_name"/>
            <result property="itemPrice" column="item_cost"/>
        </association>
        <association property="itemOption" javaType="com.shop.myapp.dto.ItemOption">
            <result property="optionCode" column="option_code"/>
            <result property="optionName" column="option_name"/>
            <result property="optionPriceUd" column="option_price_ud"/>
        </association>
    </resultMap>

    <insert id="insertCart" parameterType="com.shop.myapp.dto.Cart">
        <selectKey resultType="java.lang.String" keyProperty="cartId" order="BEFORE">
            SELECT CODE_CARD_SQ.nextval FROM sys.DUAL
        </selectKey>
        insert into SHOP_CART_TB(CART_ID,item_code,
        member_id,
        OPTION_CODE,AMOUNT
        ) values (#{cartId},
        #{itemCode},
        #{memberId},
        #{itemOptionCode},
        #{itemAmount})
    </insert>
    <delete id="deleteCartByCartId">
        delete HR.SHOP_CART_TB
        where CART_ID = #{cartId}
    </delete>
    <delete id="deleteCartByMemberId">
        delete HR.SHOP_CART_TB
        where MEMBER_ID = #{memberId}
    </delete>
    <select id="findByMemberId" resultMap="cartDetail">
        select cart.*,
               item.ITEM_NAME as item_name,
               item.ITEM_COST as item_cost,
               item.ITEM_CODE as item_code,
               options.OPTION_NAME as option_name,
               options.OPTION_PRICEUD as option_priceud,
               options.OPTION_CODE as option_code
        from HR.SHOP_CART_TB cart,
             HR.SHOP_ITEM_TB item,
             HR.SHOP_ITEM_OPTIONS_TB options
        where cart.MEMBER_ID = #{memberId}
          and cart.item_code = item.item_code
          and cart.option_code = options.option_code
    </select>


</mapper>