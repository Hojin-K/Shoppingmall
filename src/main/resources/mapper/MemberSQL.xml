<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.myapp.repository.MemberRepository">

    <insert id="insertMember">
       		INSERT INTO SHOP_MEMBER_TB VALUES(#{memberId}, #{memberPwd}, #{memberLevel},
       		#{memberName}, #{memberAddress}, #{memberTel}, #{memberBirth}
       		<if test="#{businessRegistrationNo} != null and #{businessRegistrationNo}.equals('')">
       		 ,#{businessRegistrationNo}, #{businessName}
       		</if>
       		)
    </insert>
    <update id="updateMember">
    		UPDATE SHOP_MEMBER_TB SET MEMBER_PWD = #{memberPwd}, MEMBER_NAME=#{memberName},
    		MEMBER_ADDRESS=#{memberAddress},MEMBER_TEL=#{memberTel},MEMBER_BIRTH=#{memberBirth} 
    		WHERE MEMBER_ID = #{memberId}
    </update>
    <select id="findAll" resultType="com.shop.myapp.dto.Member">
			SELECT * FROM SHOP_MEMBER_TB
    </select>
    <select id="checkUserAvailable" resultType="com.shop.myapp.dto.Member">
			SELECT * FROM SHOP_MEMBER_TB WHERE MEMBER_ID = #{memberId}
    </select>
</mapper>